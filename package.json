{
  "name": "monorepo-package-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \".next\" -o -name \".turbo\" \\) -prune -exec rm -rf {} + 2>/dev/null || true"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=24"
  }
}
