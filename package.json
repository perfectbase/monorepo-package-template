{
  "name": "monorepo-package-template",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preinstall": "node scripts/sync-versions.mjs",
    "build": "turbo run build --filter=@perfectest/*",
    "build:all": "turbo run build",
    "dev": "turbo run dev --filter=next-basic...",
    "dev:next-basic": "turbo run dev --filter=next-basic...",
    "dev:next-advanced": "turbo run dev --filter=next-advanced...",
    "dev:docs": "turbo run dev --filter=docs...",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \".next\" -o -name \".turbo\" \\) -prune -exec rm -rf {} + 2>/dev/null || true",
    "changeset": "changeset",
    "version": "changeset version && pnpm -s sync-versions",
    "release": "pnpm build && changeset publish",
    "sync-versions": "node scripts/sync-versions.mjs"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@eslint/js": "9.39.2",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-turbo": "2.7.2",
    "glob": "13.0.0",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "rollup": "4.54.0",
    "rollup-plugin-delete": "3.0.2",
    "rollup-plugin-preserve-directives": "0.4.0",
    "turbo": "2.7.2",
    "typescript": "catalog:",
    "typescript-eslint": "8.50.1"
  },
  "pnpm": {
    "overrides": {
      "@perfectest/react": "workspace:*",
      "@perfectest/server": "workspace:*",
      "@perfectest/shared": "workspace:*"
    }
  }
}
